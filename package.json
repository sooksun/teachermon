{
  "name": "teachermon",
  "version": "1.0.0",
  "description": "Kru Rak Thin Monitoring & Support System",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --parallel dev",
    "build": "pnpm --recursive build",
    "lint": "pnpm --recursive lint",
    "clean": "pnpm --recursive clean",
    "db:studio": "pnpm --filter database db:studio",
    "db:migrate": "pnpm --filter database db:migrate",
    "db:migrate:deploy": "pnpm --filter database db:migrate:deploy",
    "db:seed": "pnpm --filter database db:seed"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
