# TeacherMon API - Production Environment Variables
# คัดลอกไฟล์นี้เป็น .env.production และแก้ไขค่าให้เหมาะสม

# ========================================
# Application
# ========================================
NODE_ENV=production
PORT=3001

# ========================================
# Database (⚠️ MUST CHANGE!)
# ========================================
DATABASE_URL="postgresql://prod_user:CHANGE_THIS_PASSWORD@localhost:5432/teachermon?schema=public"

# ========================================
# JWT Authentication (⚠️ MUST CHANGE!)
# ========================================
# Generate strong secret: openssl rand -base64 32
JWT_SECRET="CHANGE_THIS_TO_RANDOM_STRING_MIN_32_CHARS"
JWT_EXPIRES_IN="7d"

# ========================================
# CORS (⚠️ MUST CHANGE!)
# ========================================
# ใส่ production domain เท่านั้น
CORS_ORIGIN="https://yourdomain.com"

# ========================================
# AI Features (Optional)
# ========================================
AI_ENABLED=true
GEMINI_API_KEY="your-production-gemini-api-key"
GEMINI_MODEL="gemini-2.5-flash"

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# ========================================
# Logging
# ========================================
LOG_LEVEL=info

# ========================================
# Monitoring (Optional)
# ========================================
SENTRY_DSN=""
NEW_RELIC_LICENSE_KEY=""

# ========================================
# Email (Optional - สำหรับ notifications)
# ========================================
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM=""

# ========================================
# File Upload
# ========================================
MAX_FILE_SIZE=52428800
UPLOAD_DIR="/uploads"

# ========================================
# Session
# ========================================
SESSION_SECRET="CHANGE_THIS_SESSION_SECRET"
